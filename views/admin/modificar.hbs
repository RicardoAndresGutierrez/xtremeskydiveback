<div class="container" style="margin:100px auto">
    <div class="row">
        <div class="col-5 offset-1">
            <h3 class="text-decoration-underline">Modificar la noticia.</h3>
            <form action="/admin/novedades/modificar" method="post" enctype="multipart/form-data">
                <input type="hidden" value="{{novedad.id}}" name="id">
                <div class="mb-3 row">
                    <label class="Texmod" for="">Titulo*</label>
                    <input type="text" class="form-control" name="titulo" value="{{novedad.titulo}}">
                </div>

                <div class="form-group">
                    <div class="mb-3 row ">
                        <label>Imagen: <div class="input-group mb-3">
                                <input type="file" name="imagen" class="form-control" id="inputGroupFile02">
                            </div></label>
                    </div>
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" id="flexSwitchCheckChecked" name="img_delete"
                            id="img_delete" value="1">
                        <label class="form-check-label" for="flexSwitchCheckChecked">Eliminar imagen
                            actual?</label>
                        <input type="hidden" name="img_original" value="{{novedad.img_id}}">
                    </div>
                </div>
                <div class="mb-3 row">
                    <label class="Texmod" for="">Cuerpo*</label>
                    <textarea type="text" class="form-control" name="cuerpo">{{novedad.cuerpo}}</textarea>
                </div>
                <button type="submit" class="btn btn-success"
                    onclick="return confirm('Â¿Seguro quiere modificar la noticia?')">Modificar <i
                        class="fa-solid fa-circle-check"></i></button>
            </form>
            {{#if error}}
            <p class="message"><i class="fa-solid fa-triangle-exclamation"></i> {{message}}</p>
            {{/if}}
        </div>
    </div>
</div>